<options>
	<ewald help="Evaluates site energies in a periodic setting" section="sec:ewald">
	<io_jobfile help="options to write a jobfile">
      <states help="states to write jobs for and which to parse from jobfile" default="n e h" />
      <segments help="segments to write jobs for and which to parse from jobfile" default="all"/>
    </io_jobfile>
		<job_file>job.xml</job_file>
		<map_file>system.xml</map_file>
		<multipoles>

			<mps_table>mps.tab</mps_table>
			<polar_bg></polar_bg>
			<pdb_check>true</pdb_check>
		</multipoles>
		<coulombmethod>
			<method>ewald</method>
			<cutoff>8.0</cutoff>
			<shape>xyslab</shape>
		</coulombmethod>
		<polarmethod>
			<method>thole</method>
			<induce>1</induce>
			<cutoff>3.0</cutoff>
		</polarmethod>
		<tasks>
			<calculate_fields>true</calculate_fields>
			<polarize_fg>true</polarize_fg>
			<evaluate_energy>true</evaluate_energy>
		</tasks>
		<coarsegrain>
			<cg_background>true</cg_background>
			<cg_foreground>false</cg_foreground>
			<cg_radius>-1</cg_radius>
			<cg_anisotropic>false</cg_anisotropic>
		</coarsegrain>
		<convergence>
			<energy>1e-5</energy>
			<kfactor>100</kfactor>
			<rfactor>6.0</rfactor>
		</convergence>
	</ewald>
</options>	

<options>
        <ewdbgpol help="Calculates background polarisation needed for ewald calc" section="sec:ewdbgpol">
                <multipoles>system.xml</multipoles>
                <control>
                        <mps_table>mps.tab</mps_table>
                        <pdb_check>1</pdb_check>
                        <ptop_check>1</ptop_check>
                </control>
                <coulombmethod>
                        <method>ewald</method>
                        <cutoff>3.0</cutoff>
                        <shape>xyslab</shape>
                </coulombmethod>
                <polarmethod>
                        <method>thole</method>
                        <induce>1</induce>
                        <cutoff>0.0</cutoff>
                </polarmethod>
                <convergence>
                        <energy>1e-5</energy>
                        <kfactor>100</kfactor>
                        <rfactor>6.0</rfactor>
                </convergence>
        </ewdbgpol>
</options>

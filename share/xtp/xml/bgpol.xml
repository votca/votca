<?xml version="1.0"?>
<options>
  <bgpol help="Computes the polarization state of the background using the Ewald summation technique.">
    <alpha help="ewald splitting param" units="1/nm" default="4"/>
    <k_cutoff help="reciprocal space cutoff" units="1/nm" default="10"/>
    <r_cutoff help="real space cutoff" units="nm" default="4.0"/>
    <thole_sharpness help="ewald splitting param" units="dim less" default="0.390"/>
    <shape help="shape for the ewald shape correction" choices="xyslab,cube,sphere" default="cube"/>
    <mapfile help="path to mapping file">xtpmap.xml</mapfile>
  </bgpol>
</options>

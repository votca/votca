<options>
    <molpol help="Tool to scale distributed polarisibilites to DFT polarisibilites" section="sec:overlap">
        <mpsinput help="Input file .mps format" default="votca.mps">votca.mps</mpsinput>
        <mpsoutput help="Output file .mps format" default="votca_polar.mps">votca_polar.mps</mpsoutput>
        <options_polar help="Options for the electrostatic interaction">
            <tolerance_energy help="Energy change as convergence criterion" default="1e-5">1e-5</tolerance_energy>
            <tolerance_dipole help="Field change as convergence criterion" default="1e-5">1e-5</tolerance_dipole>
            <max_iter help="Maximum number of iterations" default="500">500</max_iter>
            <exp_damp help="Thole sharpness parameter" default="0.39">0.39</exp_damp>
        </options_polar>
        <qmpackage  help="DFT package polarisation calculation was run with", default="xtp">xtp</qmpackage>
        <logfile help="logfile of DFTpackage to read Target polarisability from" default="votca.orb">votca.orb</logfile>
        <tolerance help="convergence tolerance" default="1e-4">1e-4</tolerance>
    </molpol>
</options>
